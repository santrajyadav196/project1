<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Products</title>
</head>
<body>
    <h3>Edit Product</h3>
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
        <label for="name">Product Name</label>
        <input type="text" name="name" id="name" placeholder="product name" value="<%= product.name %>">
        <label for="qty">Quantity</label>
        <input type="number" id="qty" name="qty" placeholder="quantity" value="<%= product.qty %>">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="price" value="<%= product.price %>">
         <label for="leftQty">Left Quantity</label>
        <input type="number" id="leftQty" name="leftQty" placeholder="left quantity" value="<%= product.leftQty %>">
        <label for="category">Select Category</label>
        <select name="category" id="category">
           <% for(let category of categories) { %>
                <option value="<%= category %>" <%= product.category === category ? 'selected': '' %> ><%= category %> </option>
                <% } %>
        </select>
        <button>Update</button>
    </form>
    <a href="/products">All Products</a>
</body>
</html>